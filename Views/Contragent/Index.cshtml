@model moeDeloTst.Models.Contragent

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Наименование организации</th>
        <th>Адрес регистрации организации</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Individual)
    {
        <tr>
            <td>@item.LastName</td>
            <td>@item.FirstName</td>
            <td>@item.Patronymic</td>
            <td>-</td>
            <td>-</td>
            <td>
                <a asp-action="Index" asp-controller="Document" asp-route-id="@item.IdContragent">Документы контрагента</a>
            </td>
        </tr>
    }



    @foreach (var item in Model.Organization)
    {
        <tr>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Index" asp-controller="Document" asp-route-id="@item.IdContragent">Документы контрагента</a>
            </td>
        </tr>
    }
</table>