@model moeDeloTst.Models.Contragent

@{
    ViewData["Title"] = "Список всех контрагентов";
}

<h2>Список всех контрагентов</h2>

<table class="table">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Наименование организации</th>
        <th>Адрес регистрации организации</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Individual)
    {
        <tr>
            <td>@item.LastName</td>
            <td>@item.FirstName</td>
            <td>@item.Patronymic</td>
            <td>-</td>
            <td>-</td>
            <td>
                <a asp-action="Index" asp-controller="Document" asp-route-id="@item.IdContragent">Просмотреть документы</a>
                <br>
                <a asp-action="Create" asp-controller="Document" asp-route-id="@item.IdContragent">Добавить документ</a>
            </td>
        </tr>
    }



    @foreach (var item in Model.Organization)
    {
        <tr>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Index" asp-controller="Document" asp-route-id="@item.IdContragent">Просмотреть документы</a>
                <br>
                <a asp-action="Create" asp-controller="Document" asp-route-id="@item.IdContragent">Добавить документ</a>
            </td>
        </tr>
    }
</table>