@model IEnumerable<moeDeloTst.Models.Individual>

@{
    ViewData["Title"] = "Список контрагентов (ИП)";
}

    <h2>Список контрагентов (ИП)</h2>

<p>
    <a asp-action="Create">Создать нового контрагента (ИП)</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Вы действительно хотите удалить запись?');">Удалить</a>
            </td>
        </tr>
    }
</table>